extends layout

block content
	.row.page-header
		.col-lg-12
			h1=pageHeader.title
	.row
		.col-xs-12
			form#addReview.form-horizonal(action="#{url}", method="post", role="form")
				- if(error == "val")
						.alert.alert-danger(role="alert") All fields required, please try again
				.form-group
					label.col-xs-2.col-sm-12.col-md-12.control-label(for="name") Name
					.col-xs-12.col-sm-12.col-md-12
						input#name.form-control(name="name")
				.form-group
					label.col-xs-2.col-sm-12.col-md-12.control-label(for="rating") Rating
					.col-xs-12.col-sm-12.col-md-12
						select#rating.form-control.input-sm(name="rating")
							option 5
							option 4
							option 3
							option 2
							option 1
				.form-group
					label.col-sm-12.col-md-12.control-label(for="review") Review
					.col-sm-12.col-md-12
						textarea#review.form-control(name="review", rows="5")
				.container
					button.btn.btn-default.pull-right Add my review
		.col-xs-12.col-md-4